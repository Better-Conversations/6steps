<% content_for :title, "Manage Invites - Six Steps" %>

<div class="mb-8 flex justify-between items-center">
  <div>
    <h1 class="text-2xl font-bold text-slate-900">Manage Invites</h1>
    <p class="text-slate-600">Create and manage user registration invites</p>
  </div>
  <%= link_to new_admin_invite_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700" do %>
    <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
    </svg>
    Create Invite
  <% end %>
</div>

<!-- Stats -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-violet-100 rounded-full p-3">
        <svg class="w-6 h-6 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 19v-8.93a2 2 0 01.89-1.664l7-4.666a2 2 0 012.22 0l7 4.666A2 2 0 0121 10.07V19M3 19a2 2 0 002 2h14a2 2 0 002-2M3 19l6.75-4.5M21 19l-6.75-4.5M3 10l6.75 4.5M21 10l-6.75 4.5m0 0l-1.14.76a2 2 0 01-2.22 0l-1.14-.76" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm text-slate-500">Total Invites</p>
        <p class="text-2xl font-semibold text-slate-900"><%= @invites.count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-emerald-100 rounded-full p-3">
        <svg class="w-6 h-6 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm text-slate-500">Valid</p>
        <p class="text-2xl font-semibold text-slate-900"><%= @invites.select(&:valid_for_use?).count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-purple-100 rounded-full p-3">
        <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm text-slate-500">Used</p>
        <p class="text-2xl font-semibold text-slate-900"><%= @invites.select(&:used?).count %></p>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
    <div class="flex items-center">
      <div class="flex-shrink-0 bg-slate-100 rounded-full p-3">
        <svg class="w-6 h-6 text-slate-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="ml-4">
        <p class="text-sm text-slate-500">Expired</p>
        <p class="text-2xl font-semibold text-slate-900"><%= @invites.select(&:expired?).count %></p>
      </div>
    </div>
  </div>
</div>

<!-- Invites list -->
<div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
  <table class="min-w-full divide-y divide-slate-200">
    <thead class="bg-slate-50">
      <tr>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          Token
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          Type
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          Created By
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          Status
        </th>
        <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">
          Created
        </th>
        <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">
          Actions
        </th>
      </tr>
    </thead>
    <tbody class="bg-white divide-y divide-slate-200">
      <% @invites.each do |invite| %>
        <tr class="hover:bg-slate-50">
          <td class="px-6 py-4 whitespace-nowrap">
            <code class="text-sm font-mono text-slate-600"><%= invite.token.truncate(12) %></code>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
            <% if invite.multi_use? %>
              <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-100 text-blue-800">
                General
                <% if invite.max_uses %>
                  (<%= invite.use_count %>/<%= invite.max_uses %>)
                <% else %>
                  (<%= invite.use_count %>)
                <% end %>
              </span>
            <% else %>
              <%= invite.email.presence || "Single-use" %>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-600">
            <%= invite.created_by&.email&.truncate(20) || "System" %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <% case invite.status %>
            <% when :valid %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                Valid
              </span>
            <% when :active %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                Active
              </span>
            <% when :used %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-purple-100 text-purple-800">
                Used
              </span>
            <% when :exhausted %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                Limit Reached
              </span>
            <% when :expired %>
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-slate-100 text-slate-800">
                Expired
              </span>
            <% end %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
            <%= invite.created_at.strftime("%b %d, %Y") %>
          </td>
          <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
            <%= link_to "View", admin_invite_path(invite), class: "text-violet-600 hover:text-violet-900 mr-3" %>
            <% if invite.valid_for_use? %>
              <%= button_to "Revoke", revoke_admin_invite_path(invite), method: :post, class: "text-purple-600 hover:text-purple-900", data: { turbo_confirm: "Are you sure you want to revoke this invite?" } %>
            <% end %>
          </td>
        </tr>
      <% end %>
      <% if @invites.empty? %>
        <tr>
          <td colspan="6" class="px-6 py-12 text-center text-slate-500">
            No invites created yet. Click "Create Invite" to get started.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
