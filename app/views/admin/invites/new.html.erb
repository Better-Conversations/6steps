<% content_for :title, "Create Invite - Six Steps" %>

<div class="mb-8">
  <%= link_to admin_invites_path, class: "inline-flex items-center text-sm text-slate-600 hover:text-slate-900" do %>
    <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
    </svg>
    Back to Invites
  <% end %>
</div>

<div class="bg-white rounded-xl shadow-sm border border-slate-200 p-8 max-w-xl">
  <h1 class="text-2xl font-bold text-slate-900 mb-6">Create New Invite</h1>

  <%= form_with model: [:admin, @invite], class: "space-y-6", data: { controller: "invite-form" } do |f| %>
    <% if @invite.errors.any? %>
      <div class="bg-rose-50 border border-rose-200 rounded-lg p-4">
        <h2 class="text-sm font-medium text-rose-800 mb-2">Please fix the following errors:</h2>
        <ul class="list-disc list-inside text-sm text-rose-700">
          <% @invite.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :multi_use, "Invite Type", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <div class="space-y-2">
        <label class="flex items-center">
          <%= f.radio_button :multi_use, false, checked: true, class: "text-violet-600 focus:ring-violet-500", data: { action: "change->invite-form#toggleMultiUse" } %>
          <span class="ml-2 text-sm text-slate-700">Single-use invite (one person)</span>
        </label>
        <label class="flex items-center">
          <%= f.radio_button :multi_use, true, class: "text-violet-600 focus:ring-violet-500", data: { action: "change->invite-form#toggleMultiUse" } %>
          <span class="ml-2 text-sm text-slate-700">General link (multiple people can use)</span>
        </label>
      </div>
      <p class="text-xs text-slate-500 mt-1">
        General links are ideal for sharing with a community. Single-use invites are for specific individuals.
      </p>
    </div>

    <div data-invite-form-target="emailField">
      <%= f.label :email, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.email_field :email,
          class: "block w-full rounded-lg border-slate-300 shadow-sm focus:border-violet-500 focus:ring-violet-500",
          placeholder: "user@example.com (optional)" %>
      <p class="text-xs text-slate-500 mt-1">
        If specified, only this email address can use the invite. Not available for general links.
      </p>
    </div>

    <div data-invite-form-target="maxUsesField" class="hidden">
      <%= f.label :max_uses, "Maximum Uses (optional)", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.number_field :max_uses,
          min: 1,
          class: "block w-full rounded-lg border-slate-300 shadow-sm focus:border-violet-500 focus:ring-violet-500",
          placeholder: "Leave blank for unlimited" %>
      <p class="text-xs text-slate-500 mt-1">
        Optionally limit how many people can register with this link.
      </p>
    </div>

    <div>
      <%= f.label :expires_in_days, "Expires In", class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.select :expires_in_days,
          [
            ["1 day", 1],
            ["3 days", 3],
            ["7 days (default)", 7],
            ["14 days", 14],
            ["30 days", 30]
          ],
          { selected: 7 },
          class: "block w-full rounded-lg border-slate-300 shadow-sm focus:border-violet-500 focus:ring-violet-500" %>
      <p class="text-xs text-slate-500 mt-1">
        The invite will expire after this period and cannot be used.
      </p>
    </div>

    <div>
      <%= f.label :notes, class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= f.text_area :notes,
          rows: 3,
          class: "block w-full rounded-lg border-slate-300 shadow-sm focus:border-violet-500 focus:ring-violet-500",
          placeholder: "Optional notes about this invite (e.g., who requested it)" %>
      <p class="text-xs text-slate-500 mt-1">
        Internal notes for tracking. Not visible to the invite recipient.
      </p>
    </div>

    <div class="pt-4">
      <%= f.submit "Create Invite",
          class: "w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500" %>
    </div>
  <% end %>
</div>
