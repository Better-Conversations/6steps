<% content_for :title, "Session Reviews - Six Steps Admin" %>

<div class="mb-8">
  <h1 class="text-2xl font-bold text-slate-900">Session Reviews</h1>
  <p class="text-slate-600">Sessions that triggered safety interventions (anonymized view)</p>
</div>

<% if @sessions.any? %>
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
    <table class="min-w-full divide-y divide-slate-200">
      <thead class="bg-slate-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Session</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Date</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Space</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Depth</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Triggers</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-slate-500 uppercase tracking-wider">Status</th>
          <th class="px-6 py-3 text-right text-xs font-medium text-slate-500 uppercase tracking-wider">Actions</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-slate-200">
        <% @sessions.each do |session| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
              #<%= session.id %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= session.created_at.strftime("%b %d, %Y %H:%M") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-900">
              <%= session.current_space&.titleize || "â€”" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= depth_level_class(session.current_depth_score) %>">
                <%= (session.current_depth_score * 100).round %>%
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-slate-500">
              <%= session.safety_audit_logs.count %> events
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= session_state_class(session.state) %>">
                <%= session.state.titleize %>
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
              <%= link_to "Review", admin_session_review_path(session), class: "text-violet-600 hover:text-violet-700 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <!-- Pagination would go here -->
<% else %>
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
    <svg class="mx-auto h-12 w-12 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>
    <h3 class="mt-4 text-lg font-medium text-slate-900">No flagged sessions</h3>
    <p class="mt-2 text-slate-500">No sessions have triggered safety interventions yet.</p>
  </div>
<% end %>
