<header class="bg-white border-b border-slate-200 shadow-sm" data-controller="mobile-menu">
  <nav class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between h-16">
      <!-- Logo and main nav -->
      <div class="flex">
        <div class="flex-shrink-0 flex items-center">
          <%= link_to root_path, class: "text-xl font-semibold text-violet-600 hover:text-violet-700" do %>
            Six Steps
          <% end %>
        </div>
        <div class="hidden sm:ml-8 sm:flex sm:space-x-6">
          <%= link_to "About", about_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-slate-600 hover:text-slate-900 border-b-2 border-transparent hover:border-slate-300" %>
          <% if user_signed_in? %>
            <%= link_to "Dashboard", dashboard_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-slate-600 hover:text-slate-900 border-b-2 border-transparent hover:border-slate-300" %>
            <%= link_to "History", session_history_index_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-slate-600 hover:text-slate-900 border-b-2 border-transparent hover:border-slate-300" %>
            <%= link_to "New Session", new_journey_session_path, class: "inline-flex items-center px-1 pt-1 text-sm font-medium text-slate-600 hover:text-slate-900 border-b-2 border-transparent hover:border-slate-300" %>
          <% end %>
        </div>
      </div>

      <!-- Right side: auth links -->
      <div class="hidden sm:ml-6 sm:flex sm:items-center sm:space-x-4">
        <% if user_signed_in? %>
          <span class="text-sm text-slate-500"><%= current_user.email %></span>
          <%= link_to "Settings", edit_user_registration_path, class: "text-sm font-medium text-slate-600 hover:text-slate-900" %>
          <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "text-sm font-medium text-slate-600 hover:text-slate-900" %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path, class: "text-sm font-medium text-slate-600 hover:text-slate-900" %>
          <%= link_to "Sign up", new_user_registration_path, class: "ml-4 inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500" %>
        <% end %>
      </div>

      <!-- Mobile menu button -->
      <div class="flex items-center sm:hidden">
        <button type="button"
                class="inline-flex items-center justify-center p-2 rounded-md text-slate-400 hover:text-slate-500 hover:bg-slate-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-violet-500"
                data-action="click->mobile-menu#toggle"
                aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg class="h-6 w-6" data-mobile-menu-target="openIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg class="hidden h-6 w-6" data-mobile-menu-target="closeIcon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="hidden sm:hidden" data-mobile-menu-target="menu">
      <div class="pt-2 pb-3 space-y-1">
        <%= link_to "About", about_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50" %>
        <% if user_signed_in? %>
          <%= link_to "Dashboard", dashboard_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50" %>
          <%= link_to "History", session_history_index_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50" %>
          <%= link_to "New Session", new_journey_session_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-violet-600 hover:text-violet-700 hover:bg-slate-50" %>
        <% end %>
      </div>
      <div class="pt-4 pb-3 border-t border-slate-200">
        <% if user_signed_in? %>
          <div class="px-4 mb-3">
            <p class="text-sm text-slate-500"><%= current_user.email %></p>
          </div>
          <div class="space-y-1">
            <%= link_to "Settings", edit_user_registration_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50" %>
            <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "block w-full text-left pl-3 pr-4 py-2 text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50" %>
          </div>
        <% else %>
          <div class="space-y-1">
            <%= link_to "Sign in", new_user_session_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-slate-600 hover:text-slate-900 hover:bg-slate-50" %>
            <%= link_to "Sign up", new_user_registration_path, class: "block pl-3 pr-4 py-2 text-base font-medium text-violet-600 hover:text-violet-700 hover:bg-slate-50" %>
          </div>
        <% end %>
      </div>
    </div>
  </nav>
</header>
