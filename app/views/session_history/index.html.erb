<% content_for :title, "Session History - Six Steps" %>

<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <div>
      <h1 class="text-2xl font-bold text-slate-900">Session History</h1>
      <p class="text-slate-600">Review your past reflection sessions</p>
    </div>
    <% if current_user.can_start_session? %>
      <%= link_to new_journey_session_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Session
      <% end %>
    <% end %>
  </div>

  <% if @sessions.any? %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 overflow-hidden">
      <div class="divide-y divide-slate-200">
        <% @sessions.each do |session| %>
          <div class="p-6 hover:bg-slate-50 transition-colors">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="<%= space_color_class(session.current_space) %> w-12 h-12 rounded-full flex items-center justify-center">
                  <%= space_icon(session.current_space) %>
                </div>
                <div class="ml-4">
                  <h3 class="font-medium text-slate-900">
                    <%= session.current_space&.titleize || "Session" %>
                  </h3>
                  <p class="text-sm text-slate-500">
                    <%= session.created_at.strftime("%B %d, %Y at %H:%M") %>
                  </p>
                </div>
              </div>

              <div class="flex items-center space-x-4">
                <div class="text-right">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= session_state_class(session.state) %>">
                    <%= session.state.titleize %>
                  </span>
                  <p class="text-sm text-slate-500 mt-1">
                    <%= session.iteration_count %> iterations
                  </p>
                </div>

                <div class="flex items-center space-x-2">
                  <%= link_to session_history_path(session), class: "p-2 text-slate-400 hover:text-violet-600 rounded-lg hover:bg-slate-100" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                    </svg>
                  <% end %>

                  <% if session.completed? %>
                    <%= link_to export_pdf_journey_session_path(session), class: "p-2 text-slate-400 hover:text-violet-600 rounded-lg hover:bg-slate-100" do %>
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    <% end %>
                  <% end %>

                  <%= button_to session_history_path(session),
                      method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this session? This cannot be undone." },
                      class: "p-2 text-slate-400 hover:text-rose-600 rounded-lg hover:bg-rose-50" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                  <% end %>
                </div>
              </div>
            </div>

            <% if session.session_summary.present? %>
              <div class="mt-4 pl-16">
                <p class="text-sm text-slate-600 italic">
                  "<%= session.session_summary.truncate(150) %>"
                </p>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Pagination would go here -->
    <% if @sessions.respond_to?(:total_pages) && @sessions.total_pages > 1 %>
      <div class="mt-6 flex justify-center">
        <!-- Add pagination links -->
      </div>
    <% end %>
  <% else %>
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-12 text-center">
      <svg class="mx-auto h-16 w-16 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-slate-900">No sessions yet</h3>
      <p class="mt-2 text-slate-500">Start your first reflection to begin building your history.</p>
      <div class="mt-6">
        <%= link_to "Start a Session", new_journey_session_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700" %>
      </div>
    </div>
  <% end %>

  <div class="mt-6 text-center">
    <%= link_to "Back to Dashboard", dashboard_path, class: "text-sm text-violet-600 hover:text-violet-700" %>
  </div>
</div>
