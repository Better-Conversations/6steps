<% content_for :title, "Support and Resources - Six Steps" %>

<div class="max-w-3xl mx-auto">
  <h1 class="text-2xl font-bold text-slate-900 mb-2">Support and Resources</h1>
  <p class="text-slate-600 mb-8">
    If you're struggling, please reach out. You don't have to face this alone.
  </p>

  <!-- Emergency notice -->
  <div class="bg-rose-50 border border-rose-200 rounded-xl p-6 mb-8">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-6 w-6 text-rose-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
        </svg>
      </div>
      <div class="ml-4">
        <h2 class="text-lg font-semibold text-rose-800">If you're in immediate danger</h2>
        <% emergency = @resources[:emergency] %>
        <p class="text-rose-700 mt-1">
          Please call <%= emergency[:name] %> immediately
          <% if emergency[:phone] %>
            (<strong><%= emergency[:phone] %></strong>)
          <% end %>
        </p>
        <% if emergency[:phone] %>
          <a href="tel:<%= emergency[:phone].gsub(/\s/, '') %>"
             class="mt-3 inline-flex items-center px-4 py-2 border border-rose-300 rounded-lg text-sm font-medium text-rose-700 bg-white hover:bg-rose-50">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call <%= emergency[:phone] %>
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Support helplines for region -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">
      Support Helplines
      <span class="text-sm font-normal text-slate-500">
        (for <%= @region.to_s.upcase %>)
      </span>
    </h2>

    <div class="space-y-4">
      <% [:primary, :secondary, :mental_health].each do |key| %>
        <% helpline = @resources[key] %>
        <% next unless helpline %>
        <div class="p-4 bg-slate-50 rounded-lg">
          <div>
            <h3 class="font-medium text-slate-900"><%= helpline[:name] %></h3>
            <p class="text-sm text-slate-600 mt-1"><%= helpline[:description] %></p>
            <div class="mt-2 flex flex-wrap gap-2">
              <% if helpline[:phone] %>
                <a href="tel:<%= helpline[:phone].gsub(/\s/, '') %>"
                   class="inline-flex items-center px-3 py-1.5 border border-violet-300 rounded-lg text-sm font-medium text-violet-700 bg-violet-50 hover:bg-violet-100">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <%= helpline[:phone] %>
                </a>
              <% end %>
              <% if helpline[:url] %>
                <a href="<%= helpline[:url] %>"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="inline-flex items-center px-3 py-1.5 border border-slate-300 rounded-lg text-sm text-slate-700 bg-white hover:bg-slate-50">
                  <svg class="w-4 h-4 mr-1.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                  </svg>
                  Website
                </a>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <p class="mt-4 text-sm text-slate-500">
      <strong>Note:</strong> Your region is set to <%= @region.to_s.upcase %>.
      You can change this in your <%= link_to "account settings", edit_user_registration_path, class: "text-violet-600 hover:text-violet-700 underline" %>.
    </p>
  </div>

  <!-- Grounding exercises -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6 mb-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Grounding Exercises</h2>
    <p class="text-slate-600 mb-4">
      Here are some grounding exercises you can try.
    </p>

    <div class="space-y-4">
      <% @grounding_exercises.each do |exercise| %>
        <div class="border border-slate-200 rounded-lg p-4">
          <h3 class="font-medium text-slate-900 mb-2"><%= exercise[:name] %></h3>
          <ol class="mt-2 space-y-1 text-sm text-slate-600 list-decimal list-inside">
            <% exercise[:instructions].each do |instruction| %>
              <li><%= instruction %></li>
            <% end %>
          </ol>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Other support options -->
  <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Other Ways to Get Support</h2>
    <ul class="space-y-3 text-slate-600">
      <li class="flex items-start">
        <svg class="w-5 h-5 text-emerald-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span>Talk to a trusted friend or family member</span>
      </li>
      <li class="flex items-start">
        <svg class="w-5 h-5 text-emerald-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span>Make an appointment with your GP or doctor</span>
      </li>
      <li class="flex items-start">
        <svg class="w-5 h-5 text-emerald-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span>Contact a counsellor or therapist</span>
      </li>
      <li class="flex items-start">
        <svg class="w-5 h-5 text-emerald-500 mr-3 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
        <span>Reach out to a support group for people with similar experiences</span>
      </li>
    </ul>
  </div>

  <div class="mt-6 text-center">
    <%= link_to "Back to Dashboard", dashboard_path, class: "text-sm text-violet-600 hover:text-violet-700" %>
  </div>
</div>
