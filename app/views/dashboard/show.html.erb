<% content_for :title, "Dashboard - Six Steps" %>

<div class="max-w-4xl mx-auto">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold text-slate-900">Your Dashboard</h1>
    <% if @has_required_consents && @active_session.nil? %>
      <%= link_to new_journey_session_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Start New Session
      <% end %>
    <% end %>
  </div>

  <!-- Consent check -->
  <% unless @has_required_consents %>
    <div class="bg-amber-50 border border-amber-200 rounded-xl p-6 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-amber-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
          </svg>
        </div>
        <div class="ml-4">
          <h3 class="text-lg font-medium text-amber-800">Consent Required</h3>
          <p class="text-amber-700 mt-1">
            Before starting a reflection session, we need your consent for processing your reflection data.
          </p>
          <div class="mt-4">
            <%= link_to "Provide Consent", consents_path, class: "inline-flex items-center px-4 py-2 border border-amber-300 rounded-lg text-sm font-medium text-amber-800 bg-amber-100 hover:bg-amber-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-amber-500" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Active session -->
  <% if @active_session %>
    <div class="bg-violet-50 border border-violet-200 rounded-xl p-6 mb-6">
      <div class="flex justify-between items-start">
        <div>
          <h2 class="text-lg font-semibold text-violet-900">Session in Progress</h2>
          <p class="text-violet-700 mt-1">
            You have an active session exploring the <strong><%= @active_session.current_space %></strong> space.
          </p>
          <p class="text-sm text-violet-600 mt-2">
            Started <%= time_ago_in_words(@active_session.started_at || @active_session.created_at) %> ago
            &bull; Iteration <%= @active_session.iteration_count %> of 6
          </p>
        </div>
        <div class="flex space-x-3">
          <%= link_to journey_session_path(@active_session), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500" do %>
            Continue Session
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid md:grid-cols-2 gap-6">
    <!-- Quick actions -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Quick Actions</h2>
      <div class="space-y-3">
        <% if @has_required_consents && @active_session.nil? %>
          <%= link_to new_journey_session_path, class: "flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors" do %>
            <div class="flex-shrink-0 w-10 h-10 bg-violet-100 rounded-full flex items-center justify-center">
              <svg class="w-5 h-5 text-violet-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="font-medium text-slate-900">Start a new session</p>
              <p class="text-sm text-slate-500">Begin a guided reflection</p>
            </div>
          <% end %>
        <% end %>

        <%= link_to session_history_index_path, class: "flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="flex-shrink-0 w-10 h-10 bg-indigo-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="font-medium text-slate-900">View session history</p>
            <p class="text-sm text-slate-500">Review past reflections</p>
          </div>
        <% end %>

        <%= link_to crisis_resources_path, class: "flex items-center p-3 rounded-lg hover:bg-slate-50 transition-colors" do %>
          <div class="flex-shrink-0 w-10 h-10 bg-amber-100 rounded-full flex items-center justify-center">
            <svg class="w-5 h-5 text-amber-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
          </div>
          <div class="ml-4">
            <p class="font-medium text-slate-900">Support and resources</p>
            <p class="text-sm text-slate-500">Helplines and support available</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Recent sessions -->
    <div class="bg-white rounded-xl shadow-sm border border-slate-200 p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Recent Sessions</h2>
      <% if @recent_sessions.any? %>
        <div class="space-y-3">
          <% @recent_sessions.each do |session| %>
            <div class="flex items-center justify-between p-3 rounded-lg bg-slate-50">
              <div>
                <p class="font-medium text-slate-900">
                  <%= session.current_space&.titleize || "Session" %>
                </p>
                <p class="text-sm text-slate-500">
                  <%= session.created_at.strftime("%B %d, %Y") %>
                  &bull; <%= session.iteration_count %> iterations
                  &bull;
                  <span class="<%= session.completed? ? 'text-emerald-600' : 'text-amber-600' %>">
                    <%= session.state.titleize %>
                  </span>
                </p>
              </div>
              <% if session.completed? %>
                <%= link_to session_history_path(session), class: "text-sm text-violet-600 hover:text-violet-700" do %>
                  View
                <% end %>
              <% elsif session.paused? %>
                <%= link_to journey_session_path(session), class: "text-sm text-violet-600 hover:text-violet-700" do %>
                  Resume
                <% end %>
              <% end %>
            </div>
          <% end %>
        </div>
        <div class="mt-4 text-center">
          <%= link_to "View all sessions", session_history_index_path, class: "text-sm text-violet-600 hover:text-violet-700" %>
        </div>
      <% else %>
        <div class="text-center py-8">
          <svg class="mx-auto h-12 w-12 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <p class="mt-2 text-slate-500">No sessions yet</p>
          <p class="text-sm text-slate-400">Start your first reflection to begin your journey</p>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Disclaimer reminder -->
  <div class="mt-8">
    <%= render "shared/disclaimer" %>
  </div>
</div>
