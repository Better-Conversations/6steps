<div class="space-y-6">
  <!-- Summary of journey -->
  <div class="bg-slate-50 rounded-xl p-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Your Reflection Journey</h2>

    <div class="space-y-4">
      <% @journey_session.session_iterations.where.not(space_explored: "integration").order(:iteration_number).each do |iteration| %>
        <div class="border-l-2 border-violet-200 pl-4">
          <p class="text-sm text-slate-500 mb-1">Step <%= iteration.iteration_number %></p>
          <p class="text-slate-700 italic">"<%= iteration.question_asked&.truncate(100) %>"</p>
          <% if iteration.reflected_words.present? %>
            <p class="text-sm text-violet-600 mt-1">Key words: <%= iteration.reflected_words %></p>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Integration question -->
  <div class="bg-purple-50 border border-purple-200 rounded-xl p-8 text-center">
    <svg class="mx-auto h-12 w-12 text-purple-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>

    <h2 class="text-xl font-semibold text-purple-900 mb-4">Time to Integrate</h2>
    <p class="text-2xl text-purple-800 italic mb-6">
      "What do you know now that you didn't know before?"
    </p>

    <%= form_with url: respond_journey_session_path(@journey_session),
                  method: :post,
                  class: "max-w-xl mx-auto" do |f| %>
      <div class="mb-4">
        <%= text_area_tag :response,
            nil,
            rows: 4,
            placeholder: "Take a moment to reflect on what has emerged...",
            class: "block w-full rounded-lg border-purple-300 shadow-sm focus:border-purple-500 focus:ring-purple-500 resize-none" %>
      </div>

      <button type="submit"
              class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-purple-600 hover:bg-purple-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-purple-500">
        Complete Reflection
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </button>
    <% end %>
  </div>

  <!-- Resources shown if depth was elevated -->
  <% if @journey_session.current_depth_score > 0.3 %>
    <div class="bg-violet-50 border border-violet-200 rounded-xl p-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-6 w-6 text-violet-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-violet-800">Support and Resources</h3>
          <p class="mt-1 text-sm text-violet-700">
            Here are some additional resources you might find useful.
            <%= link_to "View support and resources", crisis_resources_path, class: "underline font-medium hover:text-violet-800" %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
