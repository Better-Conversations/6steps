<div class="fixed inset-0 z-50 overflow-y-auto" data-controller="crisis-modal" data-crisis-modal-region-value="<%= current_user.region %>">
  <div class="flex items-center justify-center min-h-screen px-4 pt-4 pb-20 text-center sm:p-0">
    <!-- Background overlay -->
    <div class="fixed inset-0 transition-opacity bg-slate-900 bg-opacity-90" aria-hidden="true"></div>

    <!-- Modal content -->
    <div class="relative inline-block w-full max-w-lg p-8 overflow-hidden text-left align-middle transition-all transform bg-white shadow-xl rounded-2xl">
      <!-- Header -->
      <div class="text-center mb-6">
        <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-amber-100 mb-4">
          <svg class="h-8 w-8 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
        </div>
        <h2 class="text-2xl font-bold text-slate-900">Support Options</h2>
        <p class="mt-2 text-slate-600">
          Here are some resources you might find useful.
        </p>
      </div>

      <!-- Emergency notice -->
      <div class="bg-rose-50 border border-rose-200 rounded-lg p-4 mb-6">
        <p class="text-rose-800 font-medium text-center">
          If you're in immediate danger, please call your local emergency services now.
        </p>
      </div>

      <!-- Helplines -->
      <div class="space-y-3 mb-6" data-crisis-modal-target="helplines">
        <!-- Populated based on region -->
      </div>

      <!-- Acknowledgement -->
      <div class="border-t border-slate-200 pt-6">
        <p class="text-sm text-slate-600 text-center mb-4">
          To continue, please confirm you have noted these resources.
        </p>

        <div class="flex items-center justify-center mb-4">
          <input type="checkbox"
                 id="crisis-acknowledge"
                 class="h-4 w-4 text-violet-600 focus:ring-violet-500 border-slate-300 rounded"
                 data-action="change->crisis-modal#toggleContinue"
                 data-crisis-modal-target="checkbox">
          <label for="crisis-acknowledge" class="ml-2 text-sm text-slate-700">
            I have noted this support information
          </label>
        </div>

        <div class="flex justify-center space-x-4">
          <%= link_to crisis_resources_path, class: "inline-flex items-center px-4 py-2 border border-slate-300 text-sm font-medium rounded-lg text-slate-700 bg-white hover:bg-slate-50" do %>
            View All Resources
          <% end %>

          <button type="button"
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700 disabled:opacity-50 disabled:cursor-not-allowed"
                  disabled
                  data-crisis-modal-target="continueButton"
                  data-action="click->crisis-modal#close">
            Continue Session
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
