<div class="space-y-6">
  <!-- Previous iterations (if any) -->
  <% @journey_session.session_iterations.order(:iteration_number).each do |iteration| %>
    <div class="bg-slate-50 rounded-xl p-6">
      <p class="text-sm text-slate-500 mb-2">Step <%= iteration.iteration_number %></p>
      <p class="text-slate-700 italic mb-4">"<%= iteration.question_asked %>"</p>
      <p class="text-slate-900"><%= iteration.user_response %></p>

      <% if iteration.safety_intervention.present? %>
        <div class="mt-4 p-3 bg-amber-50 border border-amber-200 rounded-lg text-sm text-amber-800">
          <p><%= iteration.safety_intervention %></p>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Current question -->
  <% if @journey_session.pending_question.present? %>
    <div class="bg-white rounded-xl border-2 border-violet-200 p-6 shadow-sm">
      <p class="text-sm text-violet-600 mb-2 font-medium">Your reflection</p>
      <p class="text-xl text-slate-900 mb-6 leading-relaxed">
        "<%= @journey_session.pending_question %>"
      </p>

      <%= form_with url: respond_journey_session_path(@journey_session),
                    method: :post,
                    data: { controller: "response-form", action: "submit->response-form#submit" },
                    class: "space-y-4" do |f| %>

        <div>
          <%= text_area_tag :response,
              nil,
              rows: 4,
              placeholder: "Take your time... what do you notice?",
              class: "block w-full rounded-lg resize-none",
              data: { response_form_target: "input", action: "input->response-form#updateCount" } %>
          <div class="flex justify-between items-center mt-2 text-xs text-slate-500">
            <span data-response-form-target="count">0</span> characters
            <span>There's no right or wrong answer</span>
          </div>
        </div>

        <div class="flex justify-between items-center">
          <div class="text-sm text-slate-500">
            <% remaining = 6 - @journey_session.iteration_count %>
            <% if remaining > 0 %>
              <%= remaining %> more <%= "step".pluralize(remaining) %> remaining
            <% else %>
              This is your final reflection
            <% end %>
          </div>

          <button type="submit"
                  class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-violet-600 hover:bg-violet-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-violet-500 disabled:opacity-50"
                  data-response-form-target="submit">
            Continue
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- No pending question - show completion option -->
    <div class="bg-emerald-50 border border-emerald-200 rounded-xl p-6 text-center">
      <svg class="mx-auto h-12 w-12 text-emerald-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
      </svg>
      <h3 class="text-lg font-medium text-emerald-900 mb-2">Ready to Complete</h3>
      <p class="text-emerald-700 mb-4">You've reached the end of your reflection journey.</p>
      <%= button_to "Complete Session", complete_journey_session_path(@journey_session), method: :post, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-lg text-white bg-emerald-600 hover:bg-emerald-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
    </div>
  <% end %>
</div>
