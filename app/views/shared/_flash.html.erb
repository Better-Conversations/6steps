<% if notice %>
  <div class="mb-4 p-4 bg-emerald-50 border border-emerald-200 rounded-lg text-emerald-800" role="alert">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="mb-4 p-4 bg-rose-50 border border-rose-200 rounded-lg text-rose-800" role="alert">
    <%= alert %>
  </div>
<% end %>
